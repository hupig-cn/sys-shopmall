        <createTable tableName="v_2_publish_attrvalue">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="aid" type="bigint">
                <constraints nullable="true" />
            </column>

            <column name="title" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="jhi_value" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="publish_overwrite" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="publish_displaysort" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <column name="state" type="bigint">
                <constraints nullable="true" />
            </column>

            <column name="ctime" type="varchar(255)">
                <constraints nullable="true" />
            </column>

            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
